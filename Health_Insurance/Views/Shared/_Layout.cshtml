﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Health_Insurance</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Health_Insurance.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar-bg sticky-top">
            @if (User.IsInRole("Admin"))
            {
                <div class="container-fluid">
                    
                        <a class="navbar-brand custom-nav-link p-4" asp-area="" asp-controller="Account" asp-action="Dashboard"
                           style="text-decoration: none; display: flex; align-items: center;">

                            <i class="fa-solid fa-shield-halved" style="font-size: 2.8rem; color: #EDF6F9; margin-right: 10px;"></i>

                            <div style="display: flex; flex-direction: column; align-items: flex-start;">
                                <span style="font-size: 2rem; font-weight: bold; white-space: nowrap;">
                                    <span style="color: #EDF6F9;">Insura</span><span style="color: #E29578;">X</span>
                                </span>
                                <span style="font-size: 0.8rem; color: #ccc; white-space: nowrap;">Your Shield in Health.</span>
                            </div>
                        </a>
                   
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Account" asp-action="Dashboard"><i class="fas fa-home me-1"></i>Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Employee" asp-action="Index"><i class="fas fa-users me-1"></i>Employees</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Organization" asp-action="Index"><i class="fas fa-building me-1"></i>Organizations</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Policies" asp-action="Index"><i class="fas fa-file-invoice me-1"></i>Policies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Enrollment" asp-action="Index"><i class="fas fa-user-plus me-1"></i>Enrollments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Claim" asp-action="ListAllClaims"><i class="fas fa-hand-holding-medical me-1"></i>Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Report" asp-action="Index"><i class="fas fa-chart-pie me-1"></i>Reports</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="HR" asp-action="Index"><i class="fas fa-user-tie me-1"></i>HR</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }

            @if (User.IsInRole("HR"))
            {
                <div class="container-fluid">
                    
                        <a class="navbar-brand custom-nav-link p-4" asp-area="" asp-controller="Account" asp-action="HrDashboard"
                           style="text-decoration: none; display: flex; align-items: center;">

                            <i class="fa-solid fa-shield-halved" style="font-size: 2.8rem; color: #EDF6F9; margin-right: 10px;"></i>

                            <div style="display: flex; flex-direction: column; align-items: flex-start;">
                                <span style="font-size: 2rem; font-weight: bold; white-space: nowrap;">
                                    <span style="color: #EDF6F9;">Insura</span><span style="color: #E29578;">X</span>
                                </span>
                                <span style="font-size: 0.8rem; color: #ccc; white-space: nowrap;">Your Shield in Health.</span>
                            </div>
                        </a>
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Account" asp-action="HrDashboard"><i class="fas fa-home me-1"></i>Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Employee" asp-action="Index"><i class="fas fa-users me-1"></i>Employees (HR)</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Organization" asp-action="Index"><i class="fas fa-building me-1"></i>Organizations (HR)</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Report" asp-action="Index"><i class="fas fa-chart-pie me-1"></i>Reports (HR)</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }

            @if (User.IsInRole("Employee"))
            {
                <div class="container-fluid">
                    
                        <a class="navbar-brand custom-nav-link p-4" asp-area="" asp-controller="Account" asp-action="EmpDashboard"
                           style="text-decoration: none; display: flex; align-items: center;">

                            <i class="fa-solid fa-shield-halved" style="font-size: 2.8rem; color: #EDF6F9; margin-right: 10px;"></i>

                            <div style="display: flex; flex-direction: column; align-items: flex-start;">
                                <span style="font-size: 2rem; font-weight: bold; white-space: nowrap;">
                                    <span style="color: #EDF6F9;">Insura</span><span style="color: #E29578;">X</span>
                                </span>
                                <span style="font-size: 0.8rem; color: #ccc; white-space: nowrap;">Your Shield in Health.</span>
                            </div>
                        </a>
                    
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        @{
                            int? employeeId = null;
                            var employeeIdClaim = User.FindFirst("EmployeeId");
                            if (employeeIdClaim != null && int.TryParse(employeeIdClaim.Value, out int id))
                            {
                                employeeId = id;
                            }
                        }
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Account" asp-action="EmpDashboard"><i class="fas fa-home me-1"></i>Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Enrollment" asp-action="EnrolledPolicies" asp-route-employeeId="@employeeId"><i class="fas fa-id-card-alt me-1"></i>My Enrollments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Claim" asp-action="SubmitClaim"><i class="fas fa-file-medical-alt me-1"></i>Submit Claim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Claim" asp-action="ListAllClaims"><i class="fas fa-list-alt me-1"></i>My Claims</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="Enrollment" asp-action="Index"><i class="fas fa-search-dollar me-1"></i>View Available Policies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-nav-link" asp-area="" asp-controller="PremiumCalculator" asp-action="Index"><i class="fas fa-calculator me-1"></i>Premium Calculator</a>
                            </li>
                        </ul>
                    </div>
                </div>
            }


            @if (User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav flex-grow-1 d-flex justify-content-between align-items-center">
                    <li class="nav-item d-flex">
                        <span class="nav-link custom-nav-link"><i class="fas fa-user-circle me-1"></i>@User.Identity.Name</span>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="get">
                            <button type="submit" class=" btn custom-logout-btn d-flex align-items-center">Logout <i class="fas fa-sign-out-alt ms-1"></i></button>
                        </form>
                    </li>
                </ul>
            }
            else
            {
                <ul class="navbar-nav flex-grow-1 d-flex justify-content-between align-items-center pe-3">

                    <li>
                        <a class="navbar-brand custom-nav-link p-4" asp-area="" asp-controller="Account" asp-action="Dashboard"
                           style="text-decoration: none; display: flex; align-items: center;">

                            <i class="fa-solid fa-shield-halved" style="font-size: 2.8rem; color: #EDF6F9; margin-right: 10px;"></i>

                            <div style="display: flex; flex-direction: column; align-items: flex-start;">
                                <span style="font-size: 2rem; font-weight: bold; white-space: nowrap;">
                                    <span style="color: #EDF6F9;">Insura</span><span style="color: #E29578;">X</span>
                                </span>
                                <span style="font-size: 0.8rem; color: #ccc; white-space: nowrap;">Your Shield in Health.</span>
                            </div>
                        </a>
                    </li>
                  
                    
                    <li class="nav-item">
                        <a class="custom-login-btn btn" asp-area="" asp-controller="Account" asp-action="Login">Login <i class="fas fa-sign-in-alt ms-1"></i></a>
                    </li>
                </ul>
            }

        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    ---

    @* FOOTER REMAINS THE SAME *@
    
    
        <footer class="border-top footer text-muted d-flex justify-content-center">
            <div class="container">
                &copy; 2025 - InsuraX - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>