        }

            .app-badges .btn:hover {
                background-color: var(--secondary-text-color) !important; /* Muted olive on hover */
                border-color: var(--secondary-text-color) !important;
            }

        .footer-divider {
            border-color: var(--border-color);
            margin-top: 30px;
            margin-bottom: 20px;
        }

        .footer-copyright p {
            color: var(--secondary-text-color);
            font-size: 0.85em;
            margin: 0;
        }

        /* Default Footer for Authenticated users */
        .footer.text-muted {
            background-color: var(--primary-bg-light); /* Light background for default footer */
            color: var(--secondary-text-color) !important;
            border-top: 1px solid var(--border-color);
            padding: 15px 0;
            text-align: center;
            margin-top: auto; /* Ensure it's at the bottom */
        }

            .footer.text-muted a {
                color: var(--link-color) !important;
                text-decoration: none;
            }

