@model Health_Insurance.Models.Policy

@{
    ViewData["Title"] = "Delete Policy"; // Updated title for clarity
}

<div class="dashboard-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="dashboard-card">
    <div class="dashboard-card-header">
        <h2 class="dashboard-card-title">Confirm Deletion</h2>
    </div>
    <div class="dashboard-card-body">
        <h3 class="text-danger mb-4">Are you sure you want to delete this policy?</h3> <div class="policy-details-summary">
            <h4>Policy Details</h4>
            <hr />
            <dl class="row detail-list-custom">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PolicyName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PolicyName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CoverageAmount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CoverageAmount)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PremiumAmount)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PremiumAmount)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.PolicyType)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PolicyType)
                </dd>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="PolicyId" />
            <button type="submit" class="btn btn-danger dashboard-btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary modern-action-btn ms-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
}

<style>
