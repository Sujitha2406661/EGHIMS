@model Health_Insurance.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="dashboard-header">
    <h1>@ViewData["Title"]</h1>
</div>

<div class="dashboard-card">
    <div class="dashboard-card-header">
        <h2 class="dashboard-card-title">Confirm Deletion</h2>
    </div>
    <div class="dashboard-card-body">
        <h3 class="text-danger mb-4">Are you sure you want to delete this employee?</h3>

        <div class="details-summary-card">
            <h4>Employee Details</h4>
            <hr />
            <dl class="row detail-list-custom">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Phone)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Designation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Designation)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Organization)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Organization.OrganizationName)
                </dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Username)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Username)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CreateDate)</dt>
                <dd class="col-sm-9">@(Model.CreateDate.ToString("yyyy-MM-dd"))</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="EmployeeId" />
            <button type="submit" class="btn btn-danger dashboard-btn-danger">
                <i class="fas fa-trash-alt"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary modern-action-btn ms-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
