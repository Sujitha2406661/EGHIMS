@model IEnumerable<Health_Insurance.Models.Claim>
@* Ensure the model namespace is correct based on your project name *@

@{
    ViewData["Title"] = "All Claims";
}

<style>
    /* Color Palette Variables */
    :root {
        --primary-green-dark: #4B5945; /* Darkest Green */
        --primary-green-medium-dark: #66785F; /* Medium Dark Green */
        --primary-green-medium-light: #91AC8F; /* Medium Light Green */
        --primary-green-light: #B2C9AD; /* Lightest Green */
        --neutral-dark-text: #343a40; /* Original dark text, good contrast */
        --neutral-light-bg: #f8f9fa; /* Original light background */
        --subtle-border: #e9ecef; /* Original subtle border */
    }

    /* General Body & Typography */
    body {
        font-family: 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
        background-color: var(--neutral-light-bg);
        color: var(--neutral-dark-text);
        line-height: 1.6;
    }

    /* Main Heading */
    h1 {
        color: var(--primary-green-dark); /* Darkest green for the main heading */
        font-weight: 600;
        margin-bottom: 1.5rem; /* Standard Bootstrap spacing */
    }

    /* Primary Button (Submit New Claim) */
    .btn-primary {
        background-color: var(--primary-green-dark); /* Darkest green for primary button */
        border-color: var(--primary-green-dark);
        color: #fff; /* White text */
        padding: 0.75rem 1.25rem; /* More comfortable padding */
        border-radius: 0.5rem; /* Slightly rounded corners */
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: var(--primary-green-medium-dark); /* Medium dark green on hover */
            border-color: var(--primary-green-medium-dark);
            color: #fff; /* Ensure text remains white */
            transform: translateY(-1px); /* Slight lift effect */
            box-shadow: 0 4px 8px rgba(75, 89, 69, 0.2); /* Subtle shadow */
        }

    /* Table Styling */
    .table {
        border-collapse: separate; /* Allows for border-radius on table */
        border-spacing: 0;
        margin-top: 1rem;
        background-color: #ffffff; /* White background for the table */
        border: 1px solid var(--primary-green-light); /* Light green border for the whole table */
        border-radius: 0.5rem; /* Rounded corners for the table */
        overflow: hidden; /* Ensures rounded corners are visible */
    }

        .table thead {
            background-color: var(--primary-green-medium-light); /* Medium light green for table header background */
        }

        .table th {
            color: var(--primary-green-dark); /* Darkest green for table header text */
            font-weight: 600;
            padding: 1rem 0.75rem; /* Generous padding for headers */
            border-bottom: 1px solid var(--primary-green-medium-dark); /* Medium dark green border at bottom of header */
        }

        .table td {
            padding: 0.75rem;
            vertical-align: middle;
            border-top: 1px solid var(--subtle-border); /* Subtle border between rows */
            color: var(--neutral-dark-text); /* Standard text color for table data */
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(178, 201, 173, 0.2); /* Lightest green with transparency for striping */
    }

    .table-hover tbody tr:hover {
        background-color: var(--primary-green-light); /* Lightest green on hover */
        color: var(--primary-green-dark); /* Dark green text on hover */
    }

        .table-hover tbody tr:hover a {
            color: var(--primary-green-dark); /* Ensure links remain visible on hover */
        }


    /* Action Buttons within Table */
    .btn-sm {
        padding: 0.25rem 0.75rem; /* Smaller padding for table buttons */
        font-size: 0.875rem; /* Smaller font size */
        border-radius: 0.3rem; /* Smallest rounding */
    }

    .btn-secondary { /* 'Details' button */
        background-color: var(--primary-green-medium-dark); /* Medium dark green for action buttons */
        border-color: var(--primary-green-medium-dark);
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: var(--primary-green-dark); /* Darker green on hover */
            border-color: var(--primary-green-dark);
            color: #fff;
        }

    /* Error Message */
    .alert-danger {
        background-color: #f8d7da; /* Bootstrap default red light */
        color: #721c24; /* Bootstrap default red dark */
        border-color: #f5c6cb; /* Bootstrap default red border */
        border-radius: 0.5rem;
    }
</style>

<h1 class="mb-4">All Claims</h1>

<p>
    <a asp-action="SubmitClaim" class="btn btn-primary mb-3">Submit New Claim</a>
</p>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClaimId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClaimStatus)
            </th>
            <th></th> @* Column for action links (Details, Update Status) *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimId)
                </td>
                <td>
                    Enrollment ID: @Html.DisplayFor(modelItem => item.EnrollmentId)<br />
                    Policy: @Html.DisplayFor(modelItem => item.Enrollment.Policy.PolicyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClaimStatus)
                </td>
                <td>
                    <a asp-action="GetClaimDetails" asp-route-id="@item.ClaimId" class="btn btn-sm btn-secondary">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger mt-3">
        @ViewBag.ErrorMessage
    </div>
}