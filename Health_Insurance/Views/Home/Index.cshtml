@{
    ViewData["Title"] = "Home Page";

    // Define colors as local variables for convenience, matching the palette
    // from _Layout.cshtml. In a real app, these would ideally be centralized
    // or passed via a model if you didn't want to repeat hex codes.
    string primaryBgLight = "#F0F2ED"; // Very light, almost off-white with a hint of green
    string mainTextColor = "#3C4538"; // A slightly darker, warm charcoal
    string headingColor = "#4B5945"; // Your deepest green
    string secondaryTextColor = "#66785F"; // Your muted olive green
    string accentColor = "#A3A67C"; // Warm, slightly golden-olive
    string buttonTextColor = "#FFFFFF"; // Pure White
    string linkColor = "#91AC8F"; // Your soft sage green
    string linkHoverColor = "#66785F"; // Muted olive green for hover (though not directly applicable inline)
    string borderColor = "#D1D8C7"; // Very light, cool green-gray
    string successColor = "#7FB88A"; // Slightly brighter, friendly green
    string cardBgColor = "#FFFFFF"; // White for card backgrounds
    string tableHeaderBg = "#91AC8F"; // Soft sage for table headers
    string tableHeaderText = "#FFFFFF"; // White for table header text
    string tableRowEvenBg = "#F8FAF6"; // Slightly off-white for even rows
    string tableBorder = "#B2C9AD"; // Light desaturated green for table borders
}

@if (!User.Identity.IsAuthenticated)
