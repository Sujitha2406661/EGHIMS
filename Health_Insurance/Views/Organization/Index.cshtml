@model IEnumerable<Health_Insurance.Models.Organization>

@{
    ViewData["Title"] = "Organizations"; // Changed title for better context
}

<div class="dashboard-header">
    <h1>@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-success dashboard-btn-primary">
            <i class="fas fa-plus-circle"></i> Create New Organization <!-- Added FontAwesome icon -->
        </a>
    </p>
</div>

<div class="dashboard-card">
    <div class="dashboard-card-header">
        <h2 class="dashboard-card-title">Organization List</h2>
    </div>
    <div class="dashboard-card-body">
        <div class="table-responsive">
            <!-- Added for better responsiveness on small screens -->
            <table class="table table-hover dashboard-table">
                <!-- Added table-hover and custom class -->
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.OrganizationName)</th>
                        <th>@Html.DisplayNameFor(model => model.ContactPerson)</th>
                        <th>@Html.DisplayNameFor(model => model.ContactEmail)</th>
                        <th class="text-center">Actions</th> <!-- Centered actions header -->
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.OrganizationName)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td>
                                <td>@Html.DisplayFor(modelItem => item.ContactEmail)</td>
                                <td class="text-center">
                                    <!-- Changed to individual buttons with margin -->
                                    <a asp-action="Edit" asp-route-id="@item.OrganizationId" class="btn btn-sm btn-outline-info modern-action-btn" title="Edit">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.OrganizationId" class="btn btn-sm btn-outline-secondary modern-action-btn" title="Details">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.OrganizationId" class="btn btn-sm btn-outline-danger modern-action-btn" title="Delete">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No organizations found. Click "Create New Organization" to add one.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

