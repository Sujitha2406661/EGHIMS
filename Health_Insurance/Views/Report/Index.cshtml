@{
    ViewData["Title"] = "Reports Dashboard";
}

<h1 class="mb-4 text-center">Reports Dashboard</h1>

<p class="lead text-center mb-5">Select a report to view or export data.</p>

<div class="row justify-content-center">
    
    <div class="col-lg-8 col-md-12">
        
        <div class="list-group shadow-sm rounded-3">
           
            <a asp-action="GenerateEmployeeReport" class="list-group-item list-group-item-action custom-report-item border-0 border-bottom">
                
                <h5 class="mb-1 text-primary">Employee Report <i class="fas fa-file-alt float-end"></i></h5> 
                <p class="mb-1 text-muted">View details of all employees, including their associated organizations.</p>
            </a>
            <a asp-action="GeneratePolicyReport" class="list-group-item list-group-item-action custom-report-item border-0 border-bottom">
                <h5 class="mb-1 text-success">Policy Report <i class="fas fa-shield-alt float-end"></i></h5> 
                <p class="mb-1 text-muted">View details of all available insurance policies.</p>
            </a>
            <a asp-action="GenerateEnrollmentReport" class="list-group-item list-group-item-action custom-report-item border-0 border-bottom">
                <h5 class="mb-1 text-info">Enrollment Report <i class="fas fa-clipboard-list float-end"></i></h5>
                <p class="mb-1 text-muted">View details of all policy enrollments, including employee and policy information.</p>
            </a>
            <a asp-action="GenerateClaimReport" class="list-group-item list-group-item-action custom-report-item border-0">
                
                <h5 class="mb-1 text-danger">Claim Report <i class="fas fa-file-invoice-dollar float-end"></i></h5> 
                <p class="mb-1 text-muted">View details of all submitted claims, including related employee and policy information.</p>
            </a>
            @* Add more report links here as needed *@
        </div>
    </div>
</div>